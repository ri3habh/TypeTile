<% layout('layouts/boilerplate') %>
<div class="container mt-3">
    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h2>Normal Mode</h2>
                    <p>Letters from randomly generated sentences will fall down the screen.</p>
                    <form action="/game" method="GET">
                        <div class="form-check form-switch">
                            <label class="form-check-label" for="poison">Poison Mode</label>
                            <input class="form-check-input" type="checkbox" id="poison" name="poison" value="poison">
                        </div>
                        <input type="hidden" name="mode" value="normal">
                        <button class="btn btn-success mt-3">Play</button>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h2>Random Mode</h2>
                    <p>Each letter will be completely random.</p>
                    <form action="/game" method="GET">
                        <div class="form-check form-switch">
                            <label class="form-check-label" for="poison">Poison Mode</label>
                            <input class="form-check-input" type="checkbox" id="poison" name="poison" value="poison">
                        </div>
                        <input type="hidden" name="mode" value="random">
                        <button class="btn btn-success mt-3">Play</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>